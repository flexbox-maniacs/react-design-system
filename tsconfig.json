{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@scripts": ["./node_modules/scripts/scripts.ts"],
      "@mixins": ["./node_modules/theme-default/scss/mixins/*"],
      "@size": ["./node_modules/theme-default/scss/functions/_size.scss"],
      "@theme": ["./node_modules/theme-default/scss/main.scss"],
      "@ds": ["./src/components/index.ts"],
      "@dom-types": ["./src/components/dom-types.ts"],
      "@images": ["./src/assets/images/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
